@model List<QuanLyDeTai.Models.Assessment>

@{
    ViewData["Title"] = "ManageAssessments";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";

    List<Topic> Model_Topic = new List<Topic>();
    var topics = ViewBag.topics;
    for (int i=0; i<Model.Count;i++)
    {
        for (int j = 0; j < topics.Count; j++)
        {
            if (topics[j].AssessmentId == Model[i].AssessmentId)
            {
                Model_Topic.Add(topics[j]);
                break;
            }
        }
    }
}


<h2 style="margin: 0px auto 40px; text-align: left; width: 1300px;">ASSESSMENT</h2>
<div style="margin: 0px auto 40px; width: 1300px;">
    <a class="btn btn-primary" asp-action="Create" style="font-size: 16px;">+ Create New Assessment Council</a>
</div>
<table class="table mt-5" style="border: solid 2px darkslategrey; width: 1300px; margin: 0 auto;">
    <thead>
        <tr>
            <th>Topic ID</th>
            <th>Assessment ID</th>
            <th>
                Number Of Members
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @for (int i= 0; i < Model.Count; i++)
        {
            <tr>
                <td>
                    @Model_Topic[i].TopicId
                </td>
                <td>
                    @Model[i].AssessmentId
                </td>
                <td>
                    @Model[i].NumberOfMembers
                </td>
            </tr>
        }
    </tbody>
</table>
